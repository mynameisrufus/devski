#!/usr/bin/env bash

SERVER_NAME=$1
SERVER_PORT=${2:="8181"}
APP_PATH=$3

DEVSKI_ROOT="${HOME}/.devski"

read -r -d '' SERVER_CONF <<EOF
# vhost generated by devski

upstream app_server_$SERVER_NAME {
  server 0.0.0.0:${SERVER_PORT} fail_timeout=30s;
}

server {
  listen 80;
  listen 443 ssl;
  ssl_certificate     $DEVSKI_ROOT/nginx/certs/$SERVER_NAME.crt;
  ssl_certificate_key $DEVSKI_ROOT/nginx/certs/$SERVER_NAME.key;
  client_max_body_size 4G;
  server_name *.$SERVER_NAME.dev $SERVER_NAME.dev;
  keepalive_timeout 5;
  root $APP_PATH/public;
  try_files \$uri/index.html \$uri.html \$uri @app;

  location @app {
    proxy_set_header X-Forwarded-For \$proxy_add_x_forwarded_for;
    proxy_set_header Host \$http_host;
    proxy_redirect off;
    proxy_pass http://app_server_$SERVER_NAME;
  }

  error_page 500 502 503 504 /500.html;
  location = /500.html {
    root $APP_PATH/public;
  }
}
EOF

echo "$SERVER_CONF"
