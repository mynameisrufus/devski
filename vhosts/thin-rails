#!/usr/bin/env bash

SERVER_NAME=$1
APP_PATH=$2

read -r -d '' SERVER_CONF <<EOF
# vhost generated by devski

upstream app_server_$SERVER_NAME {
  server unix:$APP_PATH/tmp/sockets/thin.sock fail_timeout=0;
}

server {
  listen 80;
  client_max_body_size 4G;
  server_name *.$SERVER_NAME.dev $SERVER_NAME.dev;
  keepalive_timeout 5;
  root $APP_PATH/public;
  try_files \$uri/index.html \$uri.html \$uri @app;

  location @app {
    proxy_set_header X-Forwarded-For \$proxy_add_x_forwarded_for;
    proxy_set_header Host \$http_host;
    proxy_redirect off;
    proxy_pass http://app_server_$SERVER_NAME;
  }

  error_page 500 502 503 504 /500.html;
  location = /500.html {
    root $APP_PATH/public;
  }
}
EOF

echo "$SERVER_CONF"
